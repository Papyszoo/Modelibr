# Worker Service Environment Configuration

# Worker identification
WORKER_ID=worker-1
WORKER_PORT=3001

# API connection
API_BASE_URL=http://webapi:8080

# Job processing settings
POLL_INTERVAL_MS=5000
MAX_CONCURRENT_JOBS=3

# Thumbnail rendering settings
RENDER_FRAME_STEP=1
RENDER_WIDTH=256
RENDER_HEIGHT=256
RENDER_FORMAT=png
RENDER_BACKGROUND=transparent
CAMERA_DISTANCE=5
ENABLE_ANTIALIASING=true

# Orbit animation settings
ORBIT_ENABLED=true
ORBIT_ANGLE_STEP=12
ORBIT_START_ANGLE=0
ORBIT_END_ANGLE=360
ORBIT_CAMERA_HEIGHT=0

# Frame encoding settings
ENCODING_ENABLED=true
ENCODING_FRAMERATE=10
WEBP_QUALITY=75
JPEG_QUALITY=85
CLEANUP_TEMP_FILES=true

# Thumbnail storage settings
THUMBNAIL_STORAGE_ENABLED=true
THUMBNAIL_STORAGE_PATH=/var/lib/modelibr/thumbnails
SKIP_DUPLICATE_THUMBNAILS=true

# Image classification settings
IMAGE_CLASSIFICATION_ENABLED=true
CLASSIFICATION_MIN_CONFIDENCE=0.1
CLASSIFICATION_MAX_TAGS=10
CLASSIFICATION_TOP_K_PER_IMAGE=5
CLASSIFICATION_IMAGE_WIDTH=512
CLASSIFICATION_IMAGE_HEIGHT=512

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Error handling
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Health check settings
HEALTHCHECK_ENABLED=true
HEALTHCHECK_ENDPOINT=/health