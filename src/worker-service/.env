# Worker Service Environment Configuration

# Worker identification
WORKER_ID=worker-1
WORKER_PORT=3001

# API connection
API_BASE_URL=http://webapi:8080

# Job processing settings
POLL_INTERVAL_MS=5000
MAX_CONCURRENT_JOBS=3

# Thumbnail rendering settings
RENDER_FRAME_STEP=1
RENDER_WIDTH=256
RENDER_HEIGHT=256
RENDER_FORMAT=png
RENDER_BACKGROUND=#f0f0f0
CAMERA_DISTANCE=5
ENABLE_ANTIALIASING=true

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Error handling
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Health check settings
HEALTHCHECK_ENABLED=true
HEALTHCHECK_ENDPOINT=/health